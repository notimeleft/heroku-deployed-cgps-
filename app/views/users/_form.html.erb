<!DOCTYPE html>
<html lang="en">
<head>
	<%= javascript_include_tag 'jquery-1.11.1.min'%>
	<%= javascript_include_tag 'bootstrap.min'%>
	<%= javascript_include_tag 'jquery.backstretch.min'%>
	<%= javascript_include_tag 'scripts'%>
	<script>
		$.backstretch(["<%= image_url('back.jpg') %>",
										"<%= image_url('back1.jpg') %>",
										"<%= image_url('back2.jpg') %>"], {duration: 3000, fade: 750});

	</script>
</head>

<body>
  <div class="depot_form">
			<div class="inner-bg">
				<div class="container">
					<div class="row">
						<div class="col-sm-8 col-sm-offset-2 text">
								<h1><strong>New User</strong></h1>
								<div class="description">
									<% if @user.errors.any? %>
                  <% @user.errors.full_messages.each do |message| %>
                    <p style="color: red"><%= message %></p>
                  <% end %>
									<% end %>
								</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-6 col-sm-offset-3 form-box">
							<div class="form-top">
								<div class="form-top-left">
									<h3>Want to use your GPS?</h3>
										<p>Enter your username and password to log on:</p>
								</div>
							</div>
							<div class="form-bottom">
								<form role="form" action="create" class="signup-form" method="post">
									<div class="form-group">
										<label class="sr-only" for="form-username">Username</label>
										<input type="text" name="name" style="height:50px" placeholder="Username" class="form-username form-control" id="form-username">
									</div>
                  <div class="form-group">
										<label class="sr-only" for="form-email">Email</label>
										<input type="text" name="email" style="height:50px" placeholder="Email" class="form-email form-control" id="form-email">
									</div>
									<div class="form-group">
										<label class="sr-only" for="form-password">Password</label>
										<input type="password" name="password" style="height:50px" placeholder="Password" class="form-password form-control" id="form-password">
									</div>
                  <div class="form-group">
										<label class="sr-only" for="form-passwordconfirmation">Password Confirmation</label>
										<input type="password" name="password_confirmation" style="height:50px" placeholder="Password Confirmation" class="form-passwordconfirmation form-control" id="form-passwordconfirmation">
									</div>
									<button type="submit" class="btn" style="height:50px">Create</button>
								</form>
								<form action="/welcome/index">
									<button type="submit" class="btn" id="map_button" style="height:50px">Back to Map</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>







</body>
</html>
